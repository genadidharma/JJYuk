<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JJYuk" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_100</item>

        <item name="android:colorBackground">@color/neutral_20</item>
        <item name="colorSurface">@color/neutral_10</item>

        <item name="colorOnPrimary">@color/neutral_10</item>
        <item name="colorOnBackground">@color/neutral_100</item>
        <item name="colorOnSurface">@color/neutral_100</item>
        <item name="android:textColorPrimary">@color/neutral_100</item>
        <item name="android:textColorSecondary">@color/neutral_70</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.JJYuk.Fullscreen" parent="Theme.JJYuk">
        <item name="android:actionBarStyle">@style/Widget.Theme.JJYuk.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.JJYuk.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>