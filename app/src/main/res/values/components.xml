<?xml version="1.0" encoding="utf-8"?><!-- TODO: 14. Configure components -->
<resources>

    <!--    AppBar-->
    <style name="AppBarLayout.Surface" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="elevation">0dp</item>
    </style>

    <!--    SearchView-->
    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_search_view</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:textColorHint">@color/neutral_70</item>
        <item name="searchIcon">@drawable/ic_search_24dp</item>
        <item name="android:layout_marginStart">@dimen/sm_margin_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.JJYuk.TextXS.Regular</item>
    </style>

    <!--    Destination Card-->
    <style name="Card.Destination" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cardCornerRadius">@dimen/xl_component_corner_radius</item>
        <item name="android:background">@color/neutral_10</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <!--    Destination Image for Card-->
    <style name="Card.Destination.Image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:foreground">@drawable/fg_destination_image_gradient</item>
    </style>

    <style name="Card.Destination.Image.Corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/xl_component_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/xl_component_corner_radius</item>
    </style>

    <!--    Destination Video for Card-->
    <style name="Card.Destination.Video" parent="Card.Destination.Image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:foreground">@drawable/fg_video_item</item>
    </style>

    <style name="Card.Destination.Video.Corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/xl_component_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/xl_component_corner_radius</item>
    </style>

    <!--    Destination Price for Card-->
    <style name="Card.Destination.Price" parent="Widget.AppCompat.TextView">
        <item name="cornerFamily">rounded</item>
        <item name="android:textColor">@color/neutral_10</item>
        <item name="android:background">@drawable/bg_price_card</item>
        <item name="android:paddingStart">@dimen/md_margin_padding</item>
        <item name="android:paddingEnd">@dimen/md_margin_padding</item>
        <item name="android:paddingTop">@dimen/sm_margin_padding</item>
        <item name="android:paddingBottom">@dimen/sm_margin_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.JJYuk.TextSM.Medium</item>
    </style>

    <!--    Destination Detail Image-->
    <style name="ShapeAppearance.Destination.Detail.Image" parent="">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ShapeAppearance.Destination.Detail.Image.Corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/xl_component_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/xl_component_corner_radius</item>
    </style>

    <!--    Destination Ticket Price for Detail-->
    <style name="TextView.Detail.Price" parent="Widget.AppCompat.TextView">
        <item name="cornerFamily">rounded</item>
        <item name="android:background">@drawable/bg_price_detail</item>
        <item name="android:textAppearance">@style/TextAppearance.JJYuk.TextLG.Bold</item>
        <item name="android:textColor">@color/neutral_10</item>
        <item name="android:paddingStart">@dimen/sm_margin_padding</item>
        <item name="android:paddingEnd">@dimen/sm_margin_padding</item>
        <item name="android:paddingTop">@dimen/sm_margin_padding</item>
        <item name="android:paddingBottom">@dimen/sm_margin_padding</item>
    </style>

    <!--    Refresh Button-->
    <style name="Button.Text.Refresh" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.JJYuk.TextBase.Medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Favorite Button-->
    <style name="Button.Icon.Favorite" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/sm_margin_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Favorite Icon-->
    <style name="ImageView.Icon.Favorite" parent="">
        <item name="android:background">@drawable/bg_circle_favorite</item>
        <item name="android:padding">@dimen/xs_margin_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Favorite Floating Action Button-->
    <style name="Fab.Favorite" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/semantic_error</item>
        <item name="tint">@color/neutral_10</item>
        <item name="android:padding">@dimen/sm_margin_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Destination open status-->
    <style name="TextView.Status.Success" parent="Widget.AppCompat.TextView">
        <item name="cornerFamily">rounded</item>
        <item name="android:textColor">@color/neutral_10</item>
        <item name="android:paddingStart">@dimen/xs_margin_padding</item>
        <item name="android:paddingEnd">@dimen/xs_margin_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.JJYuk.Text2XS.Medium</item>
    </style>

    <!--    Divider Background-->
    <style name="Divider" parent="">
        <item name="android:background">@color/neutral_30</item>
    </style>
</resources>